{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: nnvg c++",
            "type": "debugpy",
            "request": "launch",
            "module": "nunavut",
            "cwd": "${workspaceFolder}/src",
            "args": ["--experimental-languages",
                     "--verbose",
                     "--outdir", "${workspaceFolder}/nunavut_out",
                     "-l", "cpp",
                     "${workspaceFolder}/submodules/public_regulated_data_types/uavcan"]
        },
        {
            "name": "Pytest: current test",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--no-cov",
                "--keep-generated",
                "--rootdir=${workspaceFolder}",
                "${file}"
            ],
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Pytest: current test with coverage",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov=${workspaceFolder}/src",
                "--cov-report=html",
                "--keep-generated",
                "--rootdir=${workspaceFolder}",
                "${file}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Pytest: current test with profiling",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--no-cov",
                "--profile",
                "--profile-svg",
                "--keep-generated",
                "--rootdir=${workspaceFolder}",
                "${file}"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Pytest: all doc tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--keep-generated",
                "--rootdir=${workspaceFolder}",
                "${workspaceFolder}/src"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Pytest: all tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "name": "lldb: cmake.launchTargetPath",
            "args": [],
            "cwd": "${workspaceFolder}",
            "initCommands": ["settings set target.process.thread.step-avoid-regexp \"\""],
            "env": {
                "PATH": "$PATH:${command:cmake.launchTargetDirectory}",
            },
        }
    ]
}
