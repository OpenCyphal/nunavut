    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: nnvg",
            "type": "python",
            "request": "launch",
            "program": "nnvg",
            "cwd": "${workspaceFolder}/src",
            "args": ["--templates", "${workspaceFolder}/test/gentest_dsdl/templates",
                     "--generate-namespace-types",
                     "--verbose",
                     "--outdir", "${workspaceFolder}/.vscode/nunavut_out",
                     "-l", "c",
                     "${workspaceFolder}/test/gentest_dsdl/dsdl/uavcan"]
        },
        {
            "name": "Pytest: current test",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}"],
            "console": "internalConsole",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Pytest: all tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}"
        }
    ]
}